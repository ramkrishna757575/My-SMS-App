<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>

        <View
            android:id="@+id/seperator_bar_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/message_title"
            android:layout_margin="4dp"
            android:background="@color/colorGray_400"/>

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/seperator_bar_one"
            android:textSize="16sp"/>

        <View
            android:id="@+id/seperator_bar_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/message_body"
            android:layout_margin="4dp"
            android:background="@color/colorGray_400"/>

        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/seperator_bar_two"
            android:textSize="16sp"
            android:textColor="@color/colorDarkGray"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>